$('.new-message').submit(function(event) {
    console.log('submitting')
    event.preventDefault();
    client.publish(
        '/chat_rooms/<%= @message.chat_room.id %>',
        { message: $('.new-message input').val(); }
    ).then(function() {
        $('.new-message input').val('');
    }, function(error) {
        alert('There was an error while posting your message' + error);
    });
});
