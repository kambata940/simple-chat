<div id="live-chat">
    <header class="clearfix">
        <a href="#" class="chat-close">x</a>
        <h4><%= @chat_room.name %></h4>
        <!-- <span class="chat-message-counter">3</span> -->
    </header>
    <div class="chat">
        <div class="chat-history">
            <% @chat_room.messages.each do |message| %>
            <div class="chat-message clearfix">
                <div class="chat-message-content clearfix">
                    <% @message = message %>
                    <span class="chat-time"><%= @message.sended %></span>
                    <h5><%= @message.user_name %></h5>
                    <p><%= @message.content %></p>
                </div>
            </div>
            <hr>
            <% end %>
        </div>
        <form id="new_message" action="/api/v1/messages" accept-charset="UTF-8" method="post" data-remote="true">
            <input name="authenticity_token" value="quUpZj9DoGO3xHmOXmWrBGL3Ib1C/mXlTGbi0e7ltzJlwZ5VFBKVIZCi1dm5dzvMgOa3GvHB/ca+eUSzt8h4hw==" type="hidden">
            <input name="content">
            <input name="room_id" value=<%= @chat_room.id %> hidden>
            <input type="submit" hidden>
        </form>
    </div>
</div>
